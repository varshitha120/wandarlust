<% layout('/layouts/boilerplate') -%>
<body>
    
    <br><br>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create a New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" >
        <div class="md-3">
        <label for="title" class="form-label">Title</label> 
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control"  required>
        <div class="valid-feedback">Title looks good</div>
         </div>

       <div class="md-3">
         <label for="description" class="form-label">Description</label> 
         <textarea name="listing[description]" class="form-control"  required> </textarea> 
           <div class="invalid-feedback">enter proper short description</div>
       </div>
       
        
            <div class="md-3">
            <label for="image" class="form-label">upload Listing Image </label> 
            <input name="listing[image]" placeholder="enter image " class="form-control" type="file">
            required 
        </div>
         <div class="row">
             <div class="md-3 col-md-4">
         <label for="price" class="form-label">Price</label> 
         <input name="listing[price]" placeholder="enter price" class="form-control"   required>
           <div class="invalid-feedback">enter correct price</div>
        </div>
      
        <div class="md-3 col-md-8">
              <label for="country" class="form-label">Country</label> 
             <input name="listing[country]" placeholder="enter country" class="form-control" type="text"  required>
               <div class="invalid-feedback">enter correct country </div>
        </div>
         </div>
       
        
       <div class="md-3">
           <label for="location" class="form-label">Location</label>
          <input name="listing[location]" placeholder="enter location" class="form-control" type="text"  required>
        <div class="invalid-feedback">enter correct location</div>
       </div>
     
        <button class="btn btn-dark add-btn mt-3">Add</button>
      
    </form>
    <br>
    </div>
    </div>
</body>
